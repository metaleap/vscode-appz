{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "out",
		"lib": [
			"es2020"
		],
		"emitBOM": false,
		"moduleResolution": "node",
		"noErrorTruncation": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"watch": true,
		"sourceMap": false,
		"rootDir": "src",
		"newLine": "LF",
		"noFallthroughCasesInSwitch": true,
		"noEmitHelpers": true,
		"alwaysStrict": true,
		"noEmitOnError": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": false,
		"pretty": true,
		"removeComments": false,
		"strict": true,
		"strictNullChecks": false
	},
	"include": [
		"src"
	]
}
